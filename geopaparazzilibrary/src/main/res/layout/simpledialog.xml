<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/upperline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/horizontal_line_height_fat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_decorations"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/dialogtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upperline"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="dummy text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        app:srcCompat="@drawable/button_background_drawable"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/dialogtext"
        android:text="@android:string/ok"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/lowerline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/horizontal_line_height_fat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialogButtonOK"
        android:background="@color/main_decorations"
        android:orientation="horizontal" />

</RelativeLayout>