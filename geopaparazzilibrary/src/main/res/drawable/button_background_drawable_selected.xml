<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_selection" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_selection_border" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_disabled" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_disabled_border" />
        </shape>
    </item>
    <item>
	    <shape android:shape="rectangle">
            <solid android:color="@color/main_selection" />
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="@color/main_selection_border" />
        </shape>
     </item>
</selector>