<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sessions_header_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_white"
    android:cacheColorHint="@color/transparent_white"
    android:padding="10dip">

    <ImageView
        android:id="@+id/sources_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_database_primary_24dp" />

    <LinearLayout
        android:id="@+id/horizontalScrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sources_header_image"
        android:orientation="vertical"
        android:paddingLeft="5dp">


        <TextView
            android:id="@+id/sources_header_nametext"
            style="@style/GPTextViewStyle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sources_header_pathtext"
            style="@style/GPTextViewStyle"
            android:layout_alignLeft="@+id/sources_header_nametext"
            android:layout_below="@+id/sources_header_nametext"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</RelativeLayout>