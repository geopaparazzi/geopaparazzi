<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/visible"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/visible"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10dp"
        android:text="asd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/main_text_color" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/visible"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="asd"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/main_text_color" />

    <ImageButton
        android:id="@+id/propertiesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/properties" />

    <ImageButton
        android:id="@+id/labelsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/propertiesButton"
        android:layout_toRightOf="@+id/propertiesButton"
        app:srcCompat="@drawable/list_labels" />

    <ImageButton
        android:id="@+id/zoomtoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelsButton"
        android:layout_toRightOf="@+id/labelsButton"
        app:srcCompat="@drawable/list_zoomto" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/propertiesButton"
        android:layout_toRightOf="@+id/zoomtoButton"
        app:srcCompat="@drawable/list_up" />

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/propertiesButton"
        android:layout_toRightOf="@+id/upButton"
        app:srcCompat="@drawable/list_down" />

</RelativeLayout>